{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build", 
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // "-fsanitize=address,undefined", 
                "-fno-omit-frame-pointer",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++20",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Compare with Expected",
            "type": "shell",
            "command": "code --diff \"${fileDirname}/output.txt\" \"${fileDirname}/expected.txt\"",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "group": "test"
        }
    ]
}